<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FDFDFD">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🏬 Xin chào !"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E3D59"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Banner -->
    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="239dp"
        android:contentDescription="Banner quảng cáo"
        android:scaleType="centerCrop"
        android:src="@drawable/img" />


    <!-- Các button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSanPham"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛍️ Sản phẩm"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnGioHang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🧾 Giỏ hàng"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnYeuThich"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="❤️ Yêu thích"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnTaiKhoan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="👤 Tài khoản"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>
